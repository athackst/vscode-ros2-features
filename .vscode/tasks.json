    "version": "2.0.0",
    "tasks": [
        {
            "label": "test all",
            "type": "shell",
            "command": "devcontainer features test .",
            "group": {
                "kind": "test",
                "isDefault": true
            }            
        },
        {
            "label": "test (autogenerated)",
            "type": "shell",
            "command": "devcontainer features test --features ros2 --skip-scenarios --base-image ubuntu:22.04 .",
            "group": "test"       
        },
        {
            "label": "test (scenarios)",
            "type": "shell",
            "command": "devcontainer features test --features ros2 --skip-autogenerated .",
            "group": "test"            
        },
    ]
}
